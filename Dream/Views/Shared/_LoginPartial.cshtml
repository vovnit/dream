@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
    @Html.AntiForgeryToken()
        
           <a href="javascript:document.getElementById('logoutForm').submit()" class="mdl-navigation__link">Выйти</a>

    }
}
else
{

        @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { @class= "mdl-navigation__link", @id = "registerLink" })
        @Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { @class= "mdl-navigation__link", @id = "loginLink" })

}
