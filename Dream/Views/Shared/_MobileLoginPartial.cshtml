@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <li class="mdl-menu__item"><a href="javascript:document.getElementById('logoutForm').submit()" class="mdl-menu__item">Выйти</a></li>

    }
}
else
{

    <li class="mdl-menu__item">
        @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "mdl-menu__item", @id = "registerLink" })
    </li>
    <li class="mdl-menu__item">
        @Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "mdl-menu__item", @id = "loginLink" })
    </li>
        }
